<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.TaskListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUnCompletedTask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/completedTextCountLayout"
        android:layout_margin="3dp"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/arrow"
            android:layout_gravity="center"></ImageView>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/completedCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:text="Completed (8)"

            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="181dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCompletedTask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
<!--    <View-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageButton
            android:layout_gravity="left"
            android:id="@+id/lineListButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/line_list_icon"
            android:scaleType="centerInside"
            android:background="#00ffffff"
            android:onClick="lineListButton"/>

        <ImageButton
            android:layout_gravity="left"
            android:id="@+id/sortButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/sort_icon"
            android:scaleType="centerInside"
            android:background="#00ffffff"
            android:onClick="sortButton"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


<!--        <ImageButton-->
<!--            android:layout_gravity="right"-->
<!--            android:id="@+id/addButton"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:src="@drawable/add_icon"-->
<!--            android:scaleType="centerInside"-->
<!--            android:background="#00ffffff"-->
<!--            android:onClick="addButton"/>-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addTaskButton"
            android:src="@drawable/baseline_add"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:layout_margin="2dp"


            ></com.google.android.material.floatingactionbutton.FloatingActionButton>




    </LinearLayout>



</LinearLayout>