<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_view_uncompleted_task"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        >





        <CheckBox
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:id="@+id/todoChechBox"

            android:padding="5dp"

            android:buttonTint="@android:color/holo_blue_bright"></CheckBox>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/taskDescriptionAndDateLayout"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/todoText"
            android:text="Lorem Lorem loerm"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/todoDateText"
            android:textSize="12dp"
            ></TextView>

        </LinearLayout>

        <ImageButton
            android:layout_gravity="right"
            android:id="@+id/recyclerRowFavoriteButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"

            android:src="@drawable/star"
            android:background="#00ffffff"
            />



    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>